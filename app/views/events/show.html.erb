<title></title>
      <div class="container">
                    <ul class="breadcrumb">
            <li> <i class="icon-home"></i> <a href="#">Home</a> <span class="divider">/</span> </li>
            <li><a href="#">Events</a> <span class="divider">/</span></li>
            <li>Event's Preview</li>
            <li class="fright"><a href="#"><button class="btn btn-info"><i class="icon-plus icon-white"></i> Add New Event</button></a></li>
          </ul>
                        
                                      
                        <div class="well">
                        <legend><h2><%= @event.title %></h2></legend>
                        <h4><b>Organizer: </b><%= @event.organizer %></h4>
                          <div class="row">
                          <div class="col-lg-4">
                            <%if @event.avatar.present?%>
        <%= image_tag @event.avatar.url, size: "300x200"%>
        <% else %>
        <%= image_tag 'logo1.png', size: "300x200"%>
       <% end %>
               
                          </div>
                          <div class="col-lg-4">
                          <% @category.each do |u|%>
                                 <span class="label label-success"><%= u.name%></span>
                                 <% end %> 
                                 <% @domain.each do |u|%>
                                 <span class="label label-primary"><%= u.name%></span>
                                 <% end %> 
                                 <% @eligible.each do |u|%>
                                 <span class="label label-info"><%= u.name%></span>
                                 <% end %> 
                          </div>
                          <div class="col-lg-4">
                          <table class="table table-striped table-hover ">
                           <b>EVENT CONTACT DETAILS</b>
                          <tbody>
                            <tr>
                            <td>Name:</td><td><%=@event.contact_name%></td>
                            </tr>
                            <tr>
                            <td>mail-to:</td><td><%=@event.email %></td>
                            </tr>
                            <tr>
                            <td>mob:</td><td><%=@event.contact_phone %></td>
                            </tr>
                            <td>website:</td><td><%=@event.web %></td>
                            </tr>
                            </tbody>
                            </table>
                          </div>
                          </div>
                          </div>
                          <div class="well">
                          <legend>Event Details</legend>
                          <div class= "row">
                          <div class="col-lg-5">
                          <table class="table table-striped table-hover ">                          
                          <tbody>
                            <tr>
                              <td ><b>Date:</b></td>
                              <td >From: <%=@event.sdatetime.strftime("%B %d,%Y %I:%M %p")%><br> To: <%=@event.edatetime.strftime("%B %d,%Y %I:%M %p")%></td>
                            </tr>
                            <tr>
                             <td><b>Venue:  </b></td>
                                     <td><%=@event.venue %></td>
                                    </tr>
                               <tr>
                                   <td><b>Location:  </b></td>
                                     <td><%=@event.location %></td>
                                    </tr>                                        
                        </tbody></table>
                        </div>
                        <div class="col-lg-5">
                        <b>Short Description</b>
                        
                        <%=@event.short_description %>
                        </div>
                        </div>
                        </div>  
                     <div class="well">
                     <legend>Event Description</legend>
                     <table class="table table-striped table-hover ">
                            <tbody><tr>
                            <td>
                           
                    <%=raw@event.events_description %> </td></tr></tbody></table>
                        
                  
                  <% if @user.events.include?(@event)%> 
                <!% if can? :edit, Event, %>                                     
                 <%= link_to "Edit Event",edit_event_path, :action=>'edit',:type => 'button',:class => 'btn btn-info'%>  
                 <!%end%>
                 <%= link_to "Submit for approval",submit_event_path, :action=>'edit',:type => 'button',method: :put, :class => 'btn btn-info'%>    <% end %>
                 </div>
                   </div>                    
                 </div>
                </div>

